---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout title="Blog">
  <h1 class="text-3xl font-bold mb-8">Posts</h1>

  <div class="space-y-6">
    {
      posts.map((post) => (
        <article class="border-b border-gray-200 dark:border-gray-800 pb-6">
          <a href={`/blog/${post.slug}`} class="group">
            <h2 class="text-xl font-semibold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              {post.data.title}
            </h2>
            <p class="text-gray-600 dark:text-gray-400 mb-2">
              {post.data.description}
            </p>
            <time class="text-sm text-gray-500 dark:text-gray-500">
              {post.data.date.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
            </time>
          </a>
        </article>
      ))
    }
  </div>
</Layout>
